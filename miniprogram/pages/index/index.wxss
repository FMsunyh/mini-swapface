.container {
  width: 100%;
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.logo {
  width: 100%;
  /* height: 80rpx; */
  display: flex;
  gap: 30rpx;
  justify-content: center;
  align-items: center;
}

.logo-img {
  width: 64rpx;
  height: 64rpx;
}

.logo-title {
  font-family: PingFang SC;
  font-size: 40rpx;
  font-weight: 600;
  line-height: 68rpx;
  letter-spacing: 0px;
  text-align: left;
  color: #2f3b54;
}

.logo-desc {
  font-family: PingFang SC;
  font-size: 16px;
  font-weight: 600;
  line-height: 22px;
  letter-spacing: 0px;
  text-align: left;
  background: linear-gradient(90deg, #0975ff 0%, #61e3ff 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.main-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

.describe {
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  margin-top: 32rpx;
  color: #000;
  font-feature-settings: "clig" off, "liga" off;
  font-family: "PingFang SC";
  font-size: 14px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
}

.link {
  color: rgba(0, 108, 255, 1);
  color: #006cff;
  font-feature-settings: "clig" off, "liga" off;
  font-family: "PingFang SC";
  font-size: 14px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  margin-left: 10rpx;
}

.card-box {
  display: flex;
  gap: 16rpx;
  height: 374rpx;
}

.card-box + .card-box {
  margin-top: 40rpx;
}

.card {
  flex: 1;
  height: 100%;
  border-radius: 12px;
  background: #fff;
  box-sizing: border-box;
  padding: 24rpx;
}

.card-right {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.card-txt {
  color: #000;
  font-feature-settings: "clig" off, "liga" off;
  font-family: "PingFang SC";
  font-size: 24rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  margin-top: 16rpx;
}

.card-button {
  margin-top: auto;
  display: flex;
  height: 80rpx;
  padding: 10rpx 48rpx;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  flex-shrink: 0;
  border-radius: 60rpx;
  background: #1c66e5;
  color: #fff;
  font-family: "PingFang SC";
  font-size: 28rpx;
  font-style: normal;
  font-weight: 600;
  line-height: 44rpx;
}

.card-img {
  width: 100%;
  height: 270rpx;
  border-radius: 13.45rpx;
}

.card-desc {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.card-desc-img {
  width: 40rpx;
  height: 40rpx;
}

.card-desc-txt {
  color: #1c1e25;
  font-feature-settings: "clig" off, "liga" off;
  font-family: "PingFang SC";
  font-size: 24rpx;
  font-style: normal;
  font-weight: 500;
  line-height: 36rpx;
}
